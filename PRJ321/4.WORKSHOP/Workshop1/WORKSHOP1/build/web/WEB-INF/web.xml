<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StudentEnterRoom</servlet-name>
        <servlet-class>servlet.StudentEnterRoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentEnterName</servlet-name>
        <servlet-class>servlet.StudentEnterNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoQuiz</servlet-name>
        <servlet-class>servlet.DoQuiz</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentSubmit</servlet-name>
        <servlet-class>servlet.StudentSubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentEnterRoom</servlet-name>
        <url-pattern>/student/StudentEnterRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentEnterName</servlet-name>
        <url-pattern>/student/StudentEnterName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoQuiz</servlet-name>
        <url-pattern>/student/DoQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentSubmit</servlet-name>
        <url-pattern>/student/StudentSubmit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/student/loginroom.jsp</welcome-file>
    </welcome-file-list>
</web-app>
